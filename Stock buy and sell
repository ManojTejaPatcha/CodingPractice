import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner sv=new Scanner(System.in);
	    int[] a={7,6,4,3,1};
	    List<Integer> al=new ArrayList<Integer>();
	    for(int i=0;i<a.length;i++)
	    {
	        for(int j=i;j<a.length;j++)
	        {
	            if(a[j]>a[i])
	            al.add(a[j]-a[i]);
	            
	            else
	            al.add(0);
	            
	        }
	    }
	    
		System.out.println(Collections.max(al));
	}
}
